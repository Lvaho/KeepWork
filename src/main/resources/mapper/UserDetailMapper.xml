<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjc.seckilldemo.mapper.UserDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zjc.seckilldemo.pojo.UserDetail">
        <id column="identity" property="identity" />
        <result column="overdue" property="overdue" />
        <result column="workstate" property="workstate" />
        <result column="defaulter" property="defaulter" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        identity, overdue, workstate, defaulter
    </sql>
    <select id="findUserDetailbyIdentity" resultMap="BaseResultMap">
        SELECT *
        FROM t_user_detail
        WHERE identity = #{identity}
    </select>

</mapper>
